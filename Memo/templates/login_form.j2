{% extends "base.j2" %}
{% block content %}
  <h1>ログイン</h1>
  {% from '_formhelpers.j2' import render_field %}
  <form action="{{ url_for('login') }}" method="post" novalidate>
    {{ form.hidden_tag() }}
    {{ render_field(form.username) }}
    {{ render_field(form.password) }}
    {{ form.submit }}
  </form>
  <p>アカウントをお持ちでない場合は<a href="{{ url_for('register') }}">こちら</a>から登録してください。</p>
{% endblock content %}
