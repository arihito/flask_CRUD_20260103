{% extends "base.j2" %}
{% block content %}
  <h1>メモ一覧</h1>
  <ul>
    {% for memo in memos %}
      <li>{{ memo.title }} - 
        <a href="{{ url_for('memo.update', memo_id=memo.id) }}">編集</a> |
        <a href="{{ url_for('memo.delete', memo_id=memo.id) }}">削除</a>
      </li>
    {% endfor %}
  </ul>
  <p><a href="{{ url_for('memo.create') }}">新しいメモを作成</a></p>
{% endblock content %}
